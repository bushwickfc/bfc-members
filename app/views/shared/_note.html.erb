<script>
  $(document).ready(function() {
    $('#note').toggle();
  });
</script>
<section>
  <button type="button" class="btn btn-info note-button" onclick="$('#note').toggle()">Note</button> 
  <div id="note">
    <%= f.hidden_field :commentable_id  %>
    <%= f.hidden_field :commentable_type %>
    <%= f.hidden_field :creator_id %>

    <div class="field">
      <%= f.label :note %><br>
      <%= f.text_area :note %>
    </div>
  </div>
</section>
  
