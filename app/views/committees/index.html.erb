<div class="page-header">
  <h1>Listing Committees</h1>
</div>

<table>
  <thead>
    <tr>
      <th>Member</th>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @committees.each do |committee| %>
      <tr>
        <td><%= committee.member.full_name %></td>
        <td><%= committee.name %></td>
        <td><%= link_to 'Show', committee, role:'button', class:'btn btn-info'  %></td>
        <td><%= link_to 'Edit', edit_committee_path(committee), role:'button', class:'btn btn-primary'  %></td>
        <td><%= link_to 'Destroy', committee_path(committee), role:'button', class:'btn btn-danger', method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New committee', new_committee_path, role:'button', class:'btn btn-success' %>
